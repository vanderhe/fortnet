Network = BPNN {

  Hidden = 2 2
  Activation = 'sigmoid'

}

Mapping = ACSF {

  NRadial = 5
  NAngular = 4
  RCut = 4.0
  Standardization = Yes

}

Training = LBFGS {

  Threshold = 1e-20
  NIterations = 1
  NPrintout = 1
  NSaveNet = 1
  MinDisplacement = 1e-10
  MaxDisplacement = 5e-02
  Linemin = Yes
  Memory = 1
  Loss = 'rms'

}

Data {

  Dataset = 'training_data'
  Standardization = No

  NetstatFiles = Type2FileNames {
    Prefix = "./"
    Suffix = ".net"
    LowerCaseTypeName = No
  }

}

External {

  SpeciesID {
    C = 1.0
    Si = 1.0
  }

}

Options {

  ReadNetStats = No
  Mode = 'train'

  RandomSeed = 123456

}